@startuml
class Client {
    +ClientID : int
    +Nom : String
    +Prénom : String
    +Email : String
    +Téléphone : String
}

class Vendeur {
    +VendeurID : int
    +Nom : String
    +Prénom : String
    +Email : String
}

class Produit {
    +ProduitID : int
    +Nom : String
    +Description : String
    +Prix : float
    +QuantitéDisponible : int
}

class Facture {
    +FactureID : int
    +Date : Date
    +MontantTotal : float
    +Statut : String
}

class DétailFacture {
    +DetailID : int
    +Quantité : int
    +PrixUnitaire : float
}

class Entrepôt {
    +EntrepôtID : int
    +Nom : String
    +Adresse : String
}

